<UserControl x:Class="LogicLab.IOPort"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogicLab"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle x:Name="Sprite" HorizontalAlignment="Left" Height="10" Stroke="Black" VerticalAlignment="Top" Width="10" StrokeThickness="0" Fill="#FF00CAFF" Margin="0,0,0,2" Cursor="Cross" MouseEnter="Sprite_MouseEnter" MouseLeave="Sprite_MouseLeave" MouseDown="Sprite_MouseDown" MouseMove="Sprite_MouseMove"/>
        <Label x:Name="DebugLabel" Content="Label" HorizontalAlignment="Left" Margin="-12,-10,0,0" VerticalAlignment="Top" Foreground="White" RenderTransformOrigin="-0.913,-0.625" Height="26" Width="39"/>

    </Grid>
</UserControl>
