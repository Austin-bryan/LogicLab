<UserControl x:Class="LogicLab.IOPort"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogicLab"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Loaded="Grid_Loaded">
        <Rectangle x:Name="OverlapDetector" HorizontalAlignment="Left" Height="20" Stroke="Black" VerticalAlignment="Top" Width="10" StrokeThickness="0" Fill="#0000CAFF" Cursor="Cross" MouseEnter="Sprite_MouseEnter" MouseLeave="Sprite_MouseLeave" MouseDown="Sprite_MouseDown" MouseUp="Sprite_MouseUp" OpacityMask="#7F000000"/>

        <Rectangle x:Name="Sprite" HorizontalAlignment="Left" Height="10" Stroke="Black" VerticalAlignment="Top" Width="10" StrokeThickness="0" Fill="#FF00CAFF" Margin="0,5,0,0" Cursor="Cross" MouseEnter="Sprite_MouseEnter" MouseLeave="Sprite_MouseLeave" MouseDown="Sprite_MouseDown" MouseUp="Sprite_MouseUp"/>

    </Grid>
</UserControl>
