<local:InputComponent  x:Class="LogicLab.InputToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogicLab"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="Grid_Loaded">
    <Grid x:Name="Grid">
        <Rectangle x:Name="BackgroundSprite" HorizontalAlignment="Left" Height="50" Stroke="Black" VerticalAlignment="Top" Width="50" RadiusX="10" RadiusY="10" StrokeThickness="2" MouseDown="Toggle_MouseDown" MouseMove="Gate_MouseMove" MouseUp="Toggle_MouseUp" Fill="#FF1E1E1E"/>

    </Grid>
</local:InputComponent>
