<UserControl x:Class="LogicLab.EditorUI.CreationFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogicLab.EditorUI"
             mc:Ignorable="d" Height="73" Width="247">
    <Grid Margin="0,0,0,-15">
        <Rectangle x:Name="Highlight" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="247" Fill="#00282828" MouseEnter="Highlight_MouseEnter" MouseLeave="Highlight_MouseLeave"/>

        <Rectangle x:Name="FolderArrow" HorizontalAlignment="Left" Height="12" VerticalAlignment="Top" Width="12" Fill="#FF414141" Margin="6,4,0,0" MouseLeave="FolderArrow_MouseLeave" MouseEnter="FolderArrow_MouseEnter" MouseDown="FolderArrow_MouseDown"/>
        <Label x:Name="FolderLabel" VerticalContentAlignment="Center" Content="Logic Gates" HorizontalAlignment="Left" Margin="20,-4,0,0" VerticalAlignment="Top" Height="26" Foreground="White" FontFamily="Segoe UI Light" Width="134"/>
        <StackPanel  VerticalAlignment="Top" x:Name="ItemPanel" Margin="10,20,0,0"/>

    </Grid>
</UserControl>
