<local:InputComponent x:Class="LogicLab.InputHexDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogicLab.Component.IO" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid x:Name="Grid" HorizontalAlignment="Left" VerticalAlignment="Top" Width="81" Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="InputPanel" Margin="-11,0,57,0" VerticalAlignment="Center"/>
        <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" x:Name="HexDisplayLabel" Content="" Height="77" VerticalAlignment="Center" Width="47" HorizontalAlignment="Center" Foreground="White" FontSize="50" IsHitTestVisible="False"/>
        <Ellipse x:Name="NullDot" Visibility="Hidden" Height="10" Width="10" Fill="White" IsHitTestVisible="False"/>

    </Grid>
</local:InputComponent>
