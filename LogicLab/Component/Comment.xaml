<UserControl x:Class="LogicLab.Component.Comment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogicLab.Component"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle x:Name="CommentSprite" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="500" Fill="#FF5E85FF" RadiusX="11.191" RadiusY="11.191" MouseMove="Rectangle_MouseMove"/>
        <Rectangle HorizontalAlignment="Left" Height="250" VerticalAlignment="Top" Width="480" Margin="10,39,0,0" Fill="#CC191818" RadiusX="8" RadiusY="8" IsHitTestVisible="False"/>
        <TextBlock x:Name="CommentBox" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="This is a comment" VerticalAlignment="Top" Width="480" Foreground="White" RenderTransformOrigin="0.897,1.044"/>

    </Grid>
</UserControl>
